{
    "manifest_version": 3,
    "name": "Job Application Assistant",
    "version": "1.0",
    "description": "AI-powered job application form filler",
    "permissions": [
      "activeTab",
      "storage",
      "scripting",
      "tabs"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }